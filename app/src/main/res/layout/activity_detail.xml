<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/rootSV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/backgroundPrimary">
        <ProgressBar
            android:id="@+id/progressPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.bosphere.fadingedgelayout.FadingEdgeLayout
            android:id="@+id/backdropContainerFEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fel_edge="right|top|left|bottom"
            app:fel_size_bottom="@dimen/spacing_large"
            app:fel_size_left="@dimen/spacing_large"
            app:fel_size_right="@dimen/spacing_large"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/spacing_medium"
            app:fel_size_top="@dimen/spacing_large">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:importantForAccessibility="no"
                    android:id="@+id/backdropIMG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/ic_image_placeholder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="fitCenter"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.bosphere.fadingedgelayout.FadingEdgeLayout>
        <TextView
            android:id="@+id/titleTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintBottom_toTopOf="@id/detailsLL"
            tools:text="Fight Club"
            style="@style/TextAppearance.AppCompat.MovieTitle" />
        <LinearLayout
            android:id="@+id/detailsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/backdropContainerFEL"
            android:layout_margin="@dimen/spacing_medium"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/runtimeTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.MovieInfo"
                tools:text="139 min"
                android:layout_marginEnd="@dimen/spacing_medium" />
            <TextView
                android:id="@+id/genresTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.MovieInfo"
                tools:text="Drama, Ação, História" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/backdropContainerFEL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/backgroundAccent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">
                    <ImageView
                        android:id="@+id/posterIMG"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/overviewTXT"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_placeholder"/>
                    <TextView
                        android:id="@+id/overviewTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        app:layout_constraintStart_toEndOf="@id/posterIMG"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/posterIMG"
                        tools:text="@string/app_name"/>
                    <TextView
                        android:id="@+id/labelTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/posterIMG"
                        android:text="@string/label_release_date"
                        style="@style/TextAppearance.AppCompat.Label" />
                    <TextView
                        android:id="@+id/releaseDateTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/labelTXT"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/TextAppearance.AppCompat.Body1"
                        tools:text="20/10/2019"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
